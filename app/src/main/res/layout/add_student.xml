<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddStudent">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:src="@mipmap/ic_icon_cow"
        android:id="@+id/imageViewicon"
        android:onClick="getIcon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:id="@+id/textViewSName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号："
        android:id="@+id/textViewSNum"
        android:layout_below="@id/textViewSName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSName"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="stundent's name"
        android:layout_toRightOf="@id/textViewSName"
        android:layout_alignBottom="@id/textViewSName"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSNum"
        android:inputType="number"
        android:ems="10"
        android:singleLine="true"
        android:hint="student's number"
        android:layout_toRightOf="@id/textViewSNum"
        android:layout_alignBottom="@id/textViewSNum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/addStudentSave"
        android:text="保存"
        android:textSize="30dp"
        android:background="@android:color/holo_red_light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />


</RelativeLayout>