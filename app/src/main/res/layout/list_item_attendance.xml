<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text1"
        android:layout_marginLeft="50dp"
        android:text="第"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text2"
        android:layout_toRightOf="@id/item_text1"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text3"
        android:layout_toRightOf="@id/item_text2"
        android:text="周-第"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text4"
        android:layout_toRightOf="@id/item_text3"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text5"
        android:layout_toRightOf="@id/item_text4"
        android:text="节课"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_text6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="situation"
        android:textSize="20dp"/>
</RelativeLayout>